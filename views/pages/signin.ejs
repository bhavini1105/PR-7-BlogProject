<%- include('../partials/header') %>
<body>

    <main class="d-flex align-items-center justify-content-center">
        <div class="card p-4 shadow-lg m-5" style="width: 400px; ">
            <h3 class="text-center mb-4 text-success">Sign In</h3>
            <form class="form-horizontal" id="loginform" action="/checked" method="post">
                <div class="row pb-3">
                    <div class="col-12">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control form-control-lg" placeholder="Username"
                                aria-label="Username" name="username" required />
                        </div>
                        <div class="input-group mb-3">
                            <input type="password" class="form-control form-control-lg" placeholder="Password"
                                aria-label="Password" name="password" required />
                        </div>
                    </div>
                </div>
                <div class="row border-top pt-3">
                    <div class="col-12">
                        <button class="btn btn-success w-100" type="submit">Sign in</button>
                    </div>
                    <div class="col-12 text-center mt-3">
                        <a href="/signup" class="btn btn-info w-100">Sign-Up</a>
                    </div>
                </div>
            </form>
        </div>
    </main>
    

  <%- include('../partials/footer') %>
